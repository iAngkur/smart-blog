      <div class="card card-body">
        <h4 class="mb-2">Create A New Account</h4>

        <form
          action="/playground/play"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="form-group">
            <label for="username"
              >Enter Your User Name
              <span style="font-size: 12px">(Must be Unique)</span></label
            >
            <input
              type="text"
              name="username"
              id="username"
              class="form-control"
            />
          </div>

          <div class="form-group">
            <label
              >Choose Your File<span style="font-size: 12px"
                >(Must be Unique)</span
              ></label
            >
            <input type="file" name="my-file" class="form-control" />
          </div>

